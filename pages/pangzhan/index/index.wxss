.status{
  display: block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: white;
  position: relative;
  top: -100rpx;
  left: 80rpx;
}
.classify-column text{
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.swiper-title--active{
  color: #3B94F1;
  position: relative;
}
.swiper-title--active::after{
  color: #3B94F1;
  position: absolute;
  bottom: 0;
  left: 0;
  content: ' ';
  height: 5rpx;
  background-color: #3B94F1; 
  width: 100%;
}
.classify-column{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  box-sizing: border-box; 
  background-color: #fff; 
  padding-top: 10px;
  overflow-x: scroll;
}
.top-line{
 border-top: 1px solid #efefef;
}
swiper {
  height:calc(100% - 100rpx);
}
