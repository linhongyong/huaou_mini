<!--pages/mine/index/index.wxml-->
<zan-toptips id="zan-toptips" content="{{ content }}" is-show="{{ $zanui.toptips.show }}" />
<view class='display-flex-center-center-column header'>
  <view class='head-pic'>
    <image class='' src='{{info.headpic}}'></image>
  </view>
  <view class='text-c margin-t-30 font-14'>
    <text>{{ info.nickname}}</text>
    <text class='iconfont icon-edit padding-l-10 font-16'  bindtap='toPassword'></text>
  </view>
</view>
<view style='width：100%;position:relative; top:-60rpx; z-index:-1'>
  <image src='../../../res/bg001.gif' style='width:100%; height:180rpx'></image>
</view>
<view class='padding-h-20 font-14' style='margin-top:-40rpx;'>
  <view class='accout bottom-line padding-v-10'>当前账户：{{user.mobile}}</view>
  <view class=' padding-v-10' wx:if="{{roles.length}}">
    当前用户拥有的职务：
    <text wx:for="{{roles}}" class='padding-5' wx:key="{{index}}">{{item.roleName}}{{item.projectName? "("+item.projectName+")" : ""}}</text>
  </view>
  <view class=' padding-v-10' wx:else>
    当前用户还没有职务
  </view>
</view>

<view class='font-14 padding-h-20'>
  <view>{{project.projectName}}</view>
  <block wx:for="{{ statisticsForToday }}" wx:key="{{index}}">
    <view>
      <text>{{ item.buildingName }}</text> 今日完成机械灌注桩旁站数： <text class=''>{{ item.num }}</text>
    </view>
  </block>
</view>
<view class='font-15 padding-h-20 padding-v-5'>{{ statisticsDes }}</view>
<view class='font-15 padding-h-20 margin-t-5'>
  <view>说明(不同颜色代表不同状态)：</view>
  <view>
    <text class='iconfont icon-zhengfangxing' style='color:#3ef356'></text>
    <text class='margin-l-10'>已开始</text>
  </view>
  <view>
    <text class='iconfont icon-zhengfangxing' style='color:#ff9900'></text>
    <text class='margin-l-10'>待审核</text>
  </view>
  <view>
    <text class='iconfont icon-zhengfangxing' style='color:#3B94F1'></text>
    <text class='margin-l-10'>已完成</text>
  </view>
  <!-- <view>
    <text class='iconfont icon-zhengfangxing' style='color:#3ef356'></text>
    <text class='margin-l-10'>代表已开始</text>
  </view> -->
</view>
<view style='height:100px'></view>
<button class='font-white bg-error' bindtap='logout'>退出登录</button>
